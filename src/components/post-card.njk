{% macro postCard(url, title, date, abstract, isExternal) %}
  <article class="NeumoBig FadeIn" style="--border-r:16px; --bg-c:var(--ne-global-background); --transition:box-shadow 80ms, background-color 80ms; --padding:16px 24px 24px; --position:relative; --overflow:hidden; --padding-md:24px 40px 32px;" data-target="post-list.post">
    <header>
      <time style="--color:var(--post-card-date-color); --margin-b:8px; --display:block; --font-s:0.75rem;" datetime="{{ date | htmlDate }}">{{ date | dateFilter }}</time>
      <h5 style="--ne-headings-line-height:1.2; --ne-vertical-leading:32px;">{{ title }}</h5>
    </header>
    <p data-size='small'>
      {{ abstract }}
    </p>

    <a href="{{ url }}" rel="bookmark" data-size="small" class="PostCard__Cta" style="--text-d:none; --margin-t:32px; --display:block; --padding:8px 0;">
      <strong>
        Read this story
        {% if isExternal %}
          <svg style="margin-inline-start: 4px;" xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 12 12"><path d="M6.793 3.793L.586 10 2 11.414l6.207-6.207L11 8V1H4l2.793 2.793z" fill="var(--contrast-color)" /></svg>
        {% else %}
          <svg style="margin-inline-start: 4px;" xmlns="http://www.w3.org/2000/svg" width="10" height="10" viewBox="0 0 12 12"><path d="M11.707 5.293L7 .586 5.586 2l3 3H0v2h8.586l-3 3L7 11.414l4.707-4.707a1 1 0 000-1.414z" /></svg>
        {% endif %}
      </strong>
    </a>
  </article>
{% endmacro %}
